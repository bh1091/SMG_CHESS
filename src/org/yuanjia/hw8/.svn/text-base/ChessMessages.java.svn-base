package org.yuanjia.hw8;

import com.google.gwt.i18n.client.Messages;

public interface ChessMessages extends Messages {

	@DefaultMessage("Match {0} is deleted.")
	String deletesucc(String matchId);
	  
	@DefaultMessage("Op: {0}. MatchId: {1}. Your turn: {2}.")
	String gameinfo(String Op, String matchId, String myTurn);
	
	@DefaultMessage("Draw! Reason: {0}.")
	String gamedraw(String reason);
	
	@DefaultMessage("Winner is {0}! Reason: {1}.")
	String gameresult(String winner, String reason);
	
	@DefaultMessage("Creat Time(mm/dd/yy): {1}/{2}/{0}, {3}:{4}:{5}")
	String gameStartTime(int year,int month,int day,int hour,int minite,int second);
	
	
}
