<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:image field="background" src="chessboard.png" />
	<ui:style field="css" type="org.zhaohuizhang.hw3.GameCss">
		.highlighted {
		   background-color: #ffa !important;
		}

		td img {
		   display: block
		}

		@sprite .board {
		   gwt-image: "background";
		}

        .grid {
            margin-top: 9px;
			margin-left: 9px;
			border-collapse: collapse;
			
		}

	</ui:style>
	<g:HTMLPanel>
	    <g:Label   ui:field = "playerInfo"/>
	    <g:Button  ui:field = "makeMatch"/>
	    <g:Label   ui:field = "FindOpponent"/>
	    <g:TextBox ui:field = "desiredOpponent"/>
	    <g:Button  ui:field = "searchOpponent"/>
	    <g:Label   ui:field = "opponent"/>
	    <g:Label   ui:field = "playerColor"/>
	    <Table align="center">
	        
	        <tr>
			    <td align="center">
			        <g:Button ui:field="load"/>
			        <g:Button ui:field="save"/>
			        <g:Button ui:field="startGame"/>
			    </td>
			</tr>
			<tr>
	            <td align="center" style="font-size:150%;">
	                <g:Label ui:field="gameStatus" />
	            </td>
	        </tr>
			<tr>
				<td>
					<div class="{css.board}">
						<g:Grid ui:field="gameGrid" styleName="{css.grid}" />
					</div>

				</td>
				
			</tr>
			
			<tr>
			    <td>
				    <g:Grid ui:field="blackPromotionGrid"/>
				</td>
			</tr>
			<tr>
			    <td>
			        <g:Grid ui:field="whitePromotionGrid"/>
			    </td>
			</tr>
			
		</Table>
	</g:HTMLPanel>
</ui:UiBinder> 