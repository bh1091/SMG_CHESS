package org.chenji.hw8;
import com.google.gwt.i18n.client.Messages;
public interface ChessMessages extends Messages{
@DefaultMessage("{0}: Your Turn")
String userTurn(String color);
@DefaultMessage("{0}: {1}''s Turn")
String opponentTurn(String color, String player);
@DefaultMessage("Start Time: {0}")
String startTime(String time);
@DefaultMessage("Time: {0}; Opponent: {1}; Turn: {2}; MatchId: {3}")
String newItem(String time, String opponent, String turn, String id);
@DefaultMessage("Congraduations, you win in game {0}")
String win(String matchId);
@DefaultMessage("Sorry, you lose to {1} in game {0}")
String lose(String matchId, String opponent);
@DefaultMessage("you draw in game {0}")
String draw(String matchId);
}
