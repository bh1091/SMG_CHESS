<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:o="urn:import:com.sun.org.apache.xpath.internal.operations">

	<ui:image field="background" src="background.jpg" />
	<ui:style field="css" type="org.sanjana.hw5.GameCss">
	
		.highlighted {
			outline: solid purple 3px;
		}
		
		td img {
			display: block
		}
		
		@sprite .board {
			gwt-image: "background";
			margin-top: 30px;
		}
		
		.grid {
			margin-top: 20px;
			margin-left: 20px;
			border-spacing: 0px;
			border-collapse: collapse;
		}
		
		.promotegrid {
			margin-top: 20px;
			margin-left: 20px;
			border-spacing: 0px;
			border-collapse: collapse;
		}
		
		.flex {
			left: 55px;
			background-color: #B8B8B8;
		}
		
		.gameStatus {
      font-size: 15px;
      font-weight: bold;
      color: black;
    }
    
	</ui:style>

	<g:HTMLPanel>

		<g:Label ui:field="playerTurn" text="Your Turn" styleName="{css.gameStatus}" />
		<g:Label ui:field="opponentTurn" text="Opponent's Turn" styleName="{css.gameStatus}" />

		<g:Grid ui:field="controlGrid" styleName="{css.grid}" />
		<g:Label ui:field="gameStatus" text="Status" styleName="{css.gameStatus}" />

		<div>
			<g:Grid ui:field="whitepromotionGrid" styleName="{css.promotegrid}" />
			<g:Grid ui:field="blackpromotionGrid" styleName="{css.promotegrid}" />
		</div>

		<div class="{css.board}">
			<g:Grid ui:field="gameGrid" styleName="{css.grid}" />
		</div>

		<div>
			<g:Button ui:field="SaveButton" text="Save" />
			<g:TextBox ui:field="saveStatus" text="Enter the name of saved game" />
			<g:Button ui:field="LoadButton" text="Load Saved Game" />
			<g:Button ui:field="ClearButton" text="Clear All" />

		</div>

		<div>
			<g:FlexTable ui:field="flexTable" styleName="{css.flex}" />
		</div>

	</g:HTMLPanel>

</ui:UiBinder> 