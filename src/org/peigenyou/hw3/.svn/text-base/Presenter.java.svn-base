	}
	public void createMatch(String email){
		Match match=new Match(email,user.Email);
		server.creatMatch(match, new AsyncCallback() {
			@Override
			public void onFailure(Throwable caught) {
				Window.alert(msg.createError());
			}
			@Override
			public void onSuccess(Object result) {
				server.updatePlayer(new AsyncCallback<Player>() {

					@Override
					public void onFailure(Throwable caught) {
						Window.alert(msg.updateError());
					}
					@Override
					public void onSuccess(Player result) {
						user=result;
						view.setListBox(user.Matches);
						loadMatch(user.Matches.get(user.Matches.size()-1));
					}
					
				});
