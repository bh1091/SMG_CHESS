<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.dom.client">
  <ui:style field="css" type="org.karthikmahadevan.hw3.GameCss">
    .highlighted {
      outline: green solid 4px;
    }
    .draggedOver {
      outline: yellow solid 4px;
    }
    td img {
      display: block
    }
    .blackBackground {
      background-color: #000000;
    }
    .whiteBackground {
      background-color: #FFFFFF;
    }
    .hide {
	    visibility: hidden;
	  }
	  .anime {
	    z-index: 5;
	  }
	  .bigtext {
	       font-size: 18px;
	       font-color: #00FF00;
	  }
  </ui:style>
  <g:HTMLPanel>
  <g:VerticalPanel ui:field="pnlLogin">
  <g:Label ui:field="signInPrompt" text="Please sign in to play the game!"></g:Label>
  <g:Anchor ui:field="signIn" text="Sign In"></g:Anchor>
  </g:VerticalPanel>
  <g:VerticalPanel ui:field="pnlChessGame">
  <g:VerticalPanel ui:field="pnlBoard">
  <g:HorizontalPanel> 
  <g:Label ui:field="loggedInAsText" text="You are logged in as  " styleName="bigtext"></g:Label>
  <g:Label ui:field="loggedInAs" text=""></g:Label>
  <g:Anchor ui:field="signOut" text="Sign Out"></g:Anchor>
  </g:HorizontalPanel>
  <g:HorizontalPanel styleName="hide">
    <g:Button ui:field="saveGame" text="Save"></g:Button>
    <g:Button ui:field="loadGame" text="Load"></g:Button>
    <g:Button ui:field="restartGame" text="Restart"></g:Button>
    </g:HorizontalPanel>
    <g:Label ui:field="gameStatus" text="In Progress"/>
    <g:HorizontalPanel>
    <g:Label ui:field="opponentText" text="Opponent: "/>
    <g:Label ui:field="opponent" text=""/>
    </g:HorizontalPanel>
    <g:HorizontalPanel>
    <g:Label ui:field="yourColorText" text="Your Color: "/>
    <g:Label ui:field="yourColor" text=""/>
    </g:HorizontalPanel>
    <g:HorizontalPanel>
    <g:Label ui:field="turnText" text="Turn: "/>
    <g:Label ui:field="turn" text=""/>
    </g:HorizontalPanel>
      <g:Grid ui:field="gameGrid"/>
      <g:Grid ui:field="promotionOptions" />
      <g:HorizontalPanel>
      <g:Button ui:field="autoMatch" text="Auto Match"></g:Button>
      <g:TextBox ui:field="txtPlayWith"></g:TextBox>
      <g:Button ui:field="btnPlayWith" text="Play With"></g:Button>
      </g:HorizontalPanel>
      <g:HorizontalPanel>
      <g:ListBox ui:field="matches" multipleSelect="false"></g:ListBox>
      <g:Button ui:field="loadMatch" text="Load Match"></g:Button>
      <g:Button ui:field="deleteGame" text="Delete selected match"></g:Button>
      </g:HorizontalPanel>
      </g:VerticalPanel>
      </g:VerticalPanel>
  </g:HTMLPanel>
</ui:UiBinder> 