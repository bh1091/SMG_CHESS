<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:image field="background" src="Board black.jpg"/>
  <ui:style field="css" type="org.mengyanhuang.hw3.GameCss">
    .status{
	    font-family: "Georgia";
		font-size:17px;
	}
    .highlighted {
	        outline: 3px Solid LightCoral; 
    }
    @sprite .board {
            gwt-image: "background";
          }
    .grid {
            margin-top: 20px;
            margin-left: 20px;
            border-spacing: 0px;
            border-collapse: collapse;
    } 
    .center {
			margin-left: auto;
			margin-right: auto;
		}
	.bottom{
			margin-left: auto;
			margin-top: 470px;
	}
    td img {
      display: block
    }
  </ui:style>
  <g:HTMLPanel>
    <Table align="center">
			<tr>
				<td>
                    <g:Label ui:field="gameStatus" text="Status" styleName="{css.status}"/>
                </td>
            </tr>
            <tr>
            	<td>
   					 <div class="{css.board}">
           				 <g:Grid ui:field="gameGrid" styleName="{css.grid}"/>
   					 </div>
   				</td>		    
   			</tr>
   			<tr align = "bottom" >
   				<td>
   					<g:FlowPanel ui:field="LocalStorageButton">
   					     <g:Button ui:field="RestartButton" text = "Restart a Game" styleName="{css.status}"/>
   					     <g:Button ui:field="SaveButton" text = "Save Game" styleName="{css.status}"/>
   					 </g:FlowPanel>
   				</td>
   			</tr>
   			<tr align = "bottom">
   			 	<td>
   					 <g:FlowPanel ui:field="Buttons">
   					     <g:Button ui:field="QueenButton" text = "Queen" styleName="{css.status}" />
						 <g:Button ui:field="RookButton" text = "Rook" styleName="{css.status}" />
						 <g:Button ui:field="BishopButton" text = "Bishop" styleName="{css.status}" />
					 	 <g:Button ui:field="KnightButton" text = "Knight" styleName="{css.status}" />
   					 </g:FlowPanel>
   			    </td>
   			</tr>
   	</Table>
   	<Table align="center"  style="border-spacing: 50px;">
   		<tr>
   			<td>
   			     <g:VerticalPanel ui:field = "VerticalPanel1">
   			            <g:Label text = "Choose your previous game below:" styleName="{css.status}" />
   			         	<g:ListBox ui:field="ListBox" />
   			         	<g:Button ui:field="LoadButton" text = "Load" styleName="{css.status}"/>
   			       		<g:Button ui:field="DeleteButton" text = "Delete" styleName="{css.status}"/>
   		     	 </g:VerticalPanel>
   			 </td>
   			 <td>
   			     <g:VerticalPanel ui:field = "VerticalPanel2">
   			           	 <g:Button ui:field="AutoMatchButton" text = "Auto Match" styleName="{css.status}"/>
   			           	 <g:Label text = "OR Enter email of your opponent:" styleName="{css.status}"/>
   			           	 <g:TextBox ui:field="TextBox"/>
   			           	 <g:Button  ui:field="MatchButton" text = "Match" styleName="{css.status}"/>
   			     </g:VerticalPanel>
   			 </td>
   		</tr>
   	</Table>
  </g:HTMLPanel>
</ui:UiBinder> 